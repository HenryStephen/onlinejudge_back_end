<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nciae.onlinejudge.statistic.mapper.UserProblemMapper">

    <resultMap id="BaseResultMap" type="cn.edu.nciae.onlinejudge.statistic.domain.UserProblem">
            <id property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="problemId" column="problem_id" jdbcType="BIGINT"/>
            <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,problem_id,status
    </sql>

    <select id="selectSolvedProblem" resultType="java.lang.Long">
        select problem_id
        from user_problem
        where user_id = #{userId} and status = 0
    </select>
</mapper>
